@model RatingViewModel

@{
    ViewBag.Title = "Rate this Recipe";
}

<h2 class="text-center">@ViewBag.Title</h2>
<h2 class="text-center">@Model.RecipeName</h2>
<p class="text-center">Author: @Model.Author</p>
<hr />

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="Value"></label>
        <input type="number" class="form-control" asp-for="Value" min="1" max="5" step="1" />
        <span asp-validation-for="Value" class="small text-danger"></span>
    </div> 
    <div class="form-group mb-3">
        <label asp-for="Comment"></label>
        <input type="text" class="form-control" asp-for="Comment" />
        <span asp-validation-for="Comment" class="small text-danger"></span>
    </div>
    <input type="hidden" asp-for="Timestamp" value="@DateTime.Now.Date" />
    <input type="hidden" asp-for="RecipeId" value="@Model.RecipeId" />
    <input type="hidden" asp-for="UserId" value="@Model.UserId" />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Rate it!" />
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}