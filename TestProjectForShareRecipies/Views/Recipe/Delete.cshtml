@model RecipeDetailsModel

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Delete" asp-route-id="@Model.Id">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@Model.Picture" alt="Recipe Picture" />
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Name" class="form-control"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Author" class="form-control"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-control"></label>
                <input asp-for="Description" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>