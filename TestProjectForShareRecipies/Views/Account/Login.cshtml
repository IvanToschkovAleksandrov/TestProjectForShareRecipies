@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
   
<div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3>@ViewData["Title"]</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="Login">
                            <div class="form-group">
                                <label asp-for="@Model.Email">Email:</label>
                                <input type="text" class="form-control" asp-for="@Model.Email" required>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Password">Password:</label>
                                <input type="password" class="form-control" asp-for="@Model.Password" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>